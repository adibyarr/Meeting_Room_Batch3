@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 card border-0 px-4 py-5">
                    <div class="row px-3 justify-content-center mt-4 mb-4 border-line">
                        <img src="~/image/meeting-room.png" class="image">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-4">
                    <div class="row px-3" style="justify-content: center;">
                        <img src="~/image/final-logo-formulatrix.png" class="logo" alt="Logo">
                    </div>
                    <div class="row px-3">
                        <p class="mb-3 text-center">Meeting Room Reservation</p>
                    </div>
                    <div id="loading" class="loading-overlay">
                        <div class="loading-spinner"></div>
                    </div>

                    <form method="post">
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">Email Address</h6>
                            </label>
                            <input class="mb-2 input" type="Email" name="Email"
                                placeholder="Enter a valid email address">
                        </div>
                        <div class="row px-3">
                            <label class="label mb-0">
                                <h6 class="mb-0 text-sm">Password</h6>
                            </label>
                            <input type="password" name="Password" placeholder="Enter password" class="input">
                        </div>
                        <div class="row mb-3 px-3">
                            <button type="submit" class="btn btn-blue text-center">Login</button>
                        </div>
                        <div class="row mb-3 px-3">
                            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                            }
                        </div>
                        <div class="other-login row mb-3 px-3">
                            <p>or Login with</p>
                            <div id="g_id_onload"
                                data-client_id="222390827614-n1enn4eg1fp0eftrjr90iu3heqrle7o3.apps.googleusercontent.com"
                                data-context="signin" data-ux_mode="popup" data-login-uri="http://localhost:5239"
                                data-auto_prompt="false">
                            </div>
                            <div class="g_id_signin" data-type="icon" data-shape="square" data-theme="outline"
                                data-text="signin_with" data-size="large" data-locale="en">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.querySelector('form').addEventListener('submit', function () {
        document.querySelector('#loading').style.display = 'flex';
    });
</script>
