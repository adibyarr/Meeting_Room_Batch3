@model MeetingRoomWebApp.AutoGen.User
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="https://i.imgur.com/0eg0aG0.jpg" width="90"><span class="font-weight-bold">Adibyar Rizaldy</span><span class="text-black-50">adibyarizaldy@gmail.com</span></div>
            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                    </div>
                    <form action="EditProfile=@Model.UserId" method="post">
                        <input type="hidden" asp-for="UserId" />
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Name" value="@Model.UserName">
                            </div>
                    <div class="row mt-3">
                        <div class="col-md-6"> <label>Email</label> <input asp-for="Email" class="form-control" placeholder="Email" value="@Model.Email"></div>
                    </div>
                    <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                    </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
    