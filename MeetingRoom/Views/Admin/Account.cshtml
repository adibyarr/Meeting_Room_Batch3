@model MeetingRoomWebApp.AutoGen.User

@{
    ViewBag.Title = "Account";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container rounded bg-white mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                </div>
                <div class="col-md-6">
                    <div class="row mt-2">
                        <label>UserName:</label>
                        <div>@Model.Username</div>
                    </div>
                    <div class="row mt-2">
                        <label>Email:</label>
                        <div>@Model.Email</div>
                    </div>
                    <div class="row mt-2">
                        <label>Role:</label>
                        <div>@Model.Role</div>
                    </div>
                </div>
                <div class="mt-4 text-right">
                    <button class="btn btn-primary" id="profileButton" 
                        onclick="popupEditProfile('@Model.UserId', '@Model.Username', '@Model.Email', '@Model.Role')">
                        <i class="fa-solid fa-pen-to-square"></i>       Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@* POP-UP *@
<div class="modal" tabindex="-1" data-bs-backdrop='static' data-bs-keyboard=false>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
            </div>
            <div class="modal-body">
                <p></p>
            </div>
        </div>
    </div>
</div>

<script>
    @* EDIT PROFILE DETAILS POP-UP *@
    function popupEditProfile(userId, userName, email, role) {

        $(".modal-title").html("Edit Profile");
        
        $(".modal-body").html(
            `
            <form method="post" action="EditProfile?userId=${userId}&userName=${userName}&email=${email}&role=${role}">
                <table class="table table-borderless">
                <tr>
                    <td><p>UserName: </p></td>
                    <td>
                        <input type="text" class="form-control" name="userName" value="${userName}" />
                    </td>
                </tr>
                <tr>
                    <td><p>Email: </p></td>
                    <td>
                        <input type="text" class="form-control" name="email" value="${email}" />
                    </td>
                </tr>
                <tr>
                    <td><p>Role: </p></td>
                    <td>
                        <input type="text" class="form-control" name="role" value="${role}" />
                    </td>
                </tr>
                </table>
                <div style="text-align: right">
                    <input type="submit" class="btn btn-warning" value="Update"/>
                    <button type="button" data-bs-dismiss="modal" class="btn btn-primary">Cancel</button>
                </div>
            <form>    
            `
        );

        $(".modal").modal("show");
    }
</script>
